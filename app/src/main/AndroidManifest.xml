<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ssadadream">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".Home_listClicked"
            android:screenOrientation="portrait"
            android:theme="@style/popupTheme" ></activity>
        <activity
            android:name=".QRResult"
            android:screenOrientation="portrait"
            android:theme="@style/popupTheme" />
        <activity android:name=".ScanActivity" />
        <activity android:name=".QRCode" />
        <activity
            android:name=".JoinOrderActivity"
            android:screenOrientation="portrait"
            android:theme="@style/popupTheme" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".Main2Activity" />
        <activity android:name=".AdditemActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ShowOrderNowActivity" />
        <activity
            android:name=".AdditemPopUpActivity"
            android:screenOrientation="portrait"
            android:theme="@style/popupTheme" />
    </application>



</manifest>